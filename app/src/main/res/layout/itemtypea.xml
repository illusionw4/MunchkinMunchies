<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TypeA-specific views -->
        <ImageView
            android:id="@+id/banimg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/banne"/>

    <TextView
        android:id="@+id/txtban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trending Cuisines"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
       android:fontFamily="@font/sansb"
        android:textSize="16sp"
        android:textColor="@color/darkviolet"
        />

        <!-- Other views specific to TypeA -->

    </LinearLayout>
